<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para o título da aplicação -->
    <style name="TitleText">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para o campo de adicionar tarefa -->
    <style name="AddTaskEditText">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para o botão de adicionar tarefa -->
    <style name="AddButton">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para o título da lista de tarefas -->
    <style name="TaskText">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para o botão de editar tarefa -->
    <style name="EditButton">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para o botão de excluir tarefa -->
    <style name="DeleteButton">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
